


.container
  .row
    .col-md-6
      .h2 All Staff
    .col
      |  
    .col
      button#staffModal.btn.btn-outline-primary(type='button', data-toggle='modal', data-target='#addStaffModal')
        i.fas.fa-user-plus 
        |   Staff



  table#StaffMembersTable.table.table-hover
    thead
      tr
        td Teams
        td Staff Member
        td Pin
        td Created Date
        td Admin

    tbody#StaffMembersTableBody

  br





  // Modal
  #addStaffModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='addStaffModalCenterTitle', aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
        .modal-header
          h5#addStaffModalLongTitle.modal-title Add Staff Member
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
        .modal-body
          .row
            .col
              .input-group
                .input-group-prepend
                  span#firstName.input-group-text.input-group-addon.primary  Name
                input#firstNameInput.input-group-outline-addon.primary.form-control(type='text', placeholder='First', aria-label='First', aria-describedby='firstName')
                input#lastNameInput.input-group-outline-addon.primary.form-control(type='text', placeholder='Last', aria-label='Last', aria-describedby='lastName')
          p
          .row
            .col
              .input-group
                .input-group-prepend
                  span#pin.input-group-text.input-group-addon.primary Pin
                input#pinInput.input-group-outline-addon.primary.form-control(type='password', placeholder='4 digits only', aria-label='Pin', aria-describedby='Pin')

            .col
              .input-group
                .input-group-prepend
                  .input-group-text.input-group-addon.primary
                    input#adminCheckBox(type='checkbox', aria-label='Checkbox for following admin or manager input')
                span.input-group-text.input-group-outline-addon.primary.form-control(type='text', aria-label='Text input with checkbox') Admin or Manager
          p
          #TeamList

          p
          .form-group#sessionType
            label.col.form-check-label(for='SessionClimbingType') Employee is:
            .btn-group.col.btn-group-toggle(data-toggle='buttons')
              .col-6#BSess.label.btn.btn-outline-primary.active
                input#ContractedChoice.input-group-outline-addon.primary(type='radio', value='Contracted', autocomplete='off', checked='')
                | Contracted
              .col-6#TSess.label.btn.btn-outline-primary
                input#HourlyChoice.input-group-outline-addon.primary(type='radio', value='Hourly', autocomplete='off')
                | Hourly
                  



  


        .modal-footer
          button.btn.btn-secondary(type='button', data-dismiss='modal') Close
          button.btn.btn-primary(type='submit', onClick='addStaff()') Save changes
