


.container
  .row
    .col-md-6
      .h2 All Staff
    .col
      |  
    .col
      button#staffModal.btn.btn-outline-primary(type='button', data-toggle='modal', data-target='#addStaffModal')
        i.fas.fa-user-plus 
        |   Staff



  table#StaffMembersTable.table.table-hover
    thead
      tr
        td Teams
        td Staff Member
        td Pin
        td Created Date

    tbody#StaffMembersTableBody

  br





  // Modal
  #addStaffModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='addStaffModalCenterTitle', aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
        .modal-header
          h5#addStaffModalLongTitle.modal-title Add Staff Member
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
        .modal-body
          .input-group
            .input-group-prepend
              span#firstName.input-group-text First Name
            input#firstName.form-control(type='text', placeholder='Username', aria-label='First Name', aria-describedby='firstName')
          p
          .input-group
            .input-group-prepend
              span#lastName.input-group-text Last Name
            input#lastName.form-control(type='text', placeholder='Username', aria-label='Last Name', aria-describedby='lastName')
          p
          .input-group
            .input-group-prepend
              span#pin.input-group-text Pin
            input#pin.form-control(type='password', placeholder='4 digits or more', aria-label='Pin', aria-describedby='Pin')     



        .modal-footer
          button.btn.btn-secondary(type='button', data-dismiss='modal') Close
          button.btn.btn-primary(type='submit', onClick='addStaff()') Save changes
