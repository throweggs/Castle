                    .col-1
                      input#Age3.form-control.form-control-sm(type='number', placeholder='', value='')
  
                    .col-4
                      select#MCID3.form-control.form-control-sm(autocomplete='false')
                        option(value='Yes') Yes
                        option(selected='',value='No') No
      
                  
                  .form-row
                    .col-1
